{
    "compilerOptions": {
        "sourceMap": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "resources/*"
            ],
        },
        "types": [
            "webpack-env",
            "jest",
            "webpack"
        ],
        "noImplicitAny": false,
        "allowUnusedLabels": true
    },
    "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
    ],
    "include": [
        "resources/**/*.ts",
        "resources/**/*.vue",
        "tests/js/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}